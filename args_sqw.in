# example of input arguments for the spinexc
# lattice (square) size
L=16
# variational parameters
phi=0.1
neel=0
jastrow=0.1
# total number of measurements (below 2^17)
N=256
# number of samples
s=1
# number of saves (must be greater or equal to s)
saves=1
# calculation prefix to avoid overwriting (keep negative for auto-incrementation)
prefix=-1
# output directory
dir=.
# q-point
qx=0
qy=0
# thermalization steps in units of L*L
therm=16
# boundary conditions
phase_shift_x=1.0
phase_shift_y=1.0
# jastrow factor selection
jas_onebodystag=1
jas_twobodystag=0
# second neighbour exchange
Jr=0.0
verbose=1
